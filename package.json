{
  "name": "linter-reek",
  "main": "./lib/linter-reek.js",
  "private": true,
  "version": "2.4.2",
  "description": "Find code smells in your Ruby projects with Reek",
  "repository": "https://github.com/AtomLinter/linter-reek.git",
  "license": "MIT",
  "configSchema": {
    "executablePath": {
      "type": "string",
      "description": "The path to the Reek executable. Find by running `which reek` or `rbenv which reek`",
      "default": "reek"
    }
  },
  "activationHooks": [
    "source.ruby:root-scope-used",
    "source.ruby.rails:root-scope-used",
    "source.ruby.rspec:root-scope-used"
  ],
  "engines": {
    "atom": ">=1.7.0 <2.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "apm test"
  },
  "dependencies": {
    "atom-linter": "10.0.0",
    "atom-package-deps": "5.1.0"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-import": "2.28.0",
    "jasmine-fix": "1.3.1"
  },
  "package-deps": [
    "linter:2.0.0"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticCommits": true,
    "rangeStrategy": "pin",
    "packageRules": [
      {
        "packagePatterns": [
          "^eslint"
        ],
        "groupName": "ESLint packages"
      }
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "globals": {
      "atom": true
    },
    "env": {
      "node": true,
      "browser": true
    }
  }
}
